<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.camera_app.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE PHOTO"
        android:id="@+id/btn_photo"
        android:onClick="take"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btn_nextactivity"
        android:layout_alignEnd="@+id/btn_nextactivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Method"
        android:id="@+id/btn_nextactivity"
        android:onClick="next"
        android:layout_below="@+id/btn_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT LIST"
        android:id="@+id/contact_button"
        android:onClick="contact"
        android:layout_below="@+id/btn_nextactivity"
        android:layout_alignRight="@+id/btn_nextactivity"
        android:layout_alignEnd="@+id/btn_nextactivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SELECT COUNTRY"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_text"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:width="120dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/email_btn"
        android:layout_above="@+id/btn_photo"
        android:layout_alignLeft="@+id/country_text"
        android:layout_alignStart="@+id/country_text"
        android:layout_alignRight="@+id/country_text"
        android:layout_alignEnd="@+id/country_text"
        android:onClick="send_mail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Book"
        android:id="@+id/btn_contactbook"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="start_contactbook"/>


</RelativeLayout>
